<html>
  <head>
    <title>Niki</title>
     <link rel="stylesheet" type="text/css" href="/stylesheets/niki.css" />
  </head>
  <body>
    <% if @error_message %>
      <section id="errors">
        <p><%= @error_message %></p>
      </section>
    <% end %>

    <section id="content">
      <h1>Create a new niki</h1>
      <form id="new-niki" method='POST' action='/new-page'>
        <label for='title'>Title</label>
        <input type='text' name='title'></input>

        <label for='content'>Content</label>
        <textarea name='content'><%= @content %></textarea>

        <section class="actions">
          <a href="javascript:history.back();">Back</a>
          <input type='submit' value='Create it' />
        </section>
     </form>
    </section>
  </body>
</html>
